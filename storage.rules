rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow all authenticated users to upload and read posts
    match /posts/{allPaths=**} {
      allow read, write: if true; // Temporarily very permissive for debugging
    }
    
    // Users can upload and access their own media files
    match /media/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public avatars (profile pictures)
    match /avatars/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
