rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own posts
    match /posts/{postId} {
      // Allow read if user owns the post
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid
      );
      // Allow update/delete if user owns the post
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow create if the user is creating their own post
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Users can only access their own social accounts
    match /socialAccounts/{accountId} {
      // Allow read if user owns the account
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow update/delete if user owns the account
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow create if creating for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Users can only access their own analytics
    match /analytics/{analyticsId} {
      // Allow read if user owns the analytics
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow update/delete if user owns the analytics
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow create if creating for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Allow reading of public platform information (for UI purposes)
    match /platforms/{platformId} {
      allow read: if true;
    }
  }
}
